<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="411dp"
        android:layout_height="82dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btn_article"
            android:layout_width="178dp"
            android:layout_height="65dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/bleu"
            android:text="Afficher les articles" />

        <Button
            android:id="@+id/connexion"
            android:layout_width="178dp"
            android:layout_height="65dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/bleu"
            android:text="CONNEXION" />
    </LinearLayout>

    <ScrollView
        android:layout_width="388dp"
        android:layout_height="550dp"
        app:layout_constraintBottom_toTopOf="@+id/error_text_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_view_id"
                android:layout_width="match_parent"
                android:layout_height="600dp"
                android:background="@color/white"
                android:text="Resultats"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/error_text_id"
        android:layout_width="388dp"
        android:layout_height="64dp"
        android:layout_marginBottom="4dp"
        android:background="@color/white"
        android:text="Pas d'erreur"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>